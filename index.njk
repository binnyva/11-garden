---
layout: base.njk
type: index
eleventyExcludeFromCollections: true
---

<div class="column is-half">
  {% if collections.homeNote.length === 1 %}
    <div class="note-content">
    {{ collections.homeNote[0].content | safe }}
    </div>
  {% else %}

  <div class="block">
    <h1>{{ siteConfig.title }}</h1>
    <p class="lead">{{ siteConfig.description }}</p>
  </div>

  {% if collections.topTags %}
    <div class="block tag-list">
      {% for tag in collections.topTags %}
        <a href="{{ tag | absoluteTagUrl }}" class="pill">{{ tag | titleCase }}</a>
      {% endfor %}
    </div>
  {% endif %}

  <div class="block">
    <div id="search"></div>
    <script>
      window.addEventListener('DOMContentLoaded', (event) => {
          new PagefindUI({ element: "#search", showSubResults: true, showImages: false });
      });
    </script>
  </div>

  <div class="block note-list note-cards">
    {% for note in collections.latestFiveNotes %}
      {% include "note-list-item.njk" %}
    {% endfor %}

    <a href="{{ "/sitemap/" | absoluteUrl }}">All Notes...</a>
  </div>

  {% endif %}  
</div>
